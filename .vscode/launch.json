  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\node_modules\\webpack-dev-server\\bin\\webpack-dev-server.js",
      "args": [
        "--open", "--mode", "development", "--inspect-brk"
      ],
      "env": {
        "CRED_FILE": "${workspaceFolder}\\firebase-auth.json"
      }
    }
  ]
}